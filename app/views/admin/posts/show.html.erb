<div class="post">
	<h2 class="title"><%= @post.title %></h2>
	<p>
	  <%= @post.body %>
	</p>
  	  <%= image_tag(@post.picture_url, width: '100%') if @post.picture.present? %>
  	<p class="note"> 
  		<small>文章作者：<%= @post.user.user_name %> | 發表時間：<%= @post.created_at.strftime("%b %d. %Y") %></small>
	</p>
</div>

<div class="comment">
	<h3 class="title">訪客回應</h3>
	<% @post.comments.each do |comment| %>
		<div id="user_name"><%= comment.user_name %></div>
			<p><%= comment.body %></p>
	<% end %>
<br />
	<%= render 'comments/form' %>
<br />
<br />
</div>