<h2 class="setting lsf-icon" title="login">登入</h2>
<div class="post">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <span class="lsf-icon" title="stop"><%= f.label :"信箱：" %><br />
  <%= f.email_field :email, autofocus: true %></span>
  <br />
  <span class="lsf-icon" title="stop"><%= f.label :"密碼：" %><br />
    <%= f.password_field :password, autocomplete: "off" %></span>
  <br />
  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, :class => "check-box" %><%= f.label :"記住我" %>
  <% end -%>

  <div class="submit"><%= f.submit "登入", :class => "btn" %></div>
<% end %>
<br>
<hr>
<%= render "devise/shared/links" %>
</div>