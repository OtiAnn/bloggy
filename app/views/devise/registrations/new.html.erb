<% if resource.errors.empty? %>
  <%= '' %>
<% else%>
  <div class="alert">
    <%= devise_error_messages! %>
  </div>
<% end %>
<h2 class="setting lsf-icon" title="add">註冊帳號</h2>
<div class="post">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <span class="lsf-icon" title="stop"><%= f.label :"名字：" %><br>
  <%= f.text_field :user_name, autofocus: true %></span>
  <br />
  <span class="lsf-icon" title="stop"><%= f.label :"信箱：" %><br>
  <%= f.email_field :email, autofocus: true %></span>
  <br />

  <span class="lsf-icon" title="stop"><%= f.label :"密碼：" %><br>
  <%= f.password_field :password, autocomplete: "off" %></span>
  <br />
  <span class="lsf-icon" title="stop"><%= f.label :"確認密碼：" %>（請再輸入一次密碼）<br>
  <%= f.password_field :password_confirmation, autocomplete: "off" %></span>
  <br>
  <div class="submit"><%= f.submit "註冊", :class => "btn" %></div>
<% end %>
<br>
<hr>
<%= render "devise/shared/links" %>
</div>