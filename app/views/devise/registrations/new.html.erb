<div class="post">
<h2 class="title">註冊帳號</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :"名字：" %><br /><br>
  <%= f.text_field :user_name, autofocus: true %></div>
  <br />
  <div><%= f.label :email %><br /><br>
  <%= f.email_field :email, autofocus: true %></div>
  <br />

  <div><%= f.label :password %><br /><br>
  <%= f.password_field :password, autocomplete: "off" %></div>
  <br />
  <div><%= f.label :password_confirmation %><br /><br>
  <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
  <br />

  <div class="submit"><%= f.submit "註冊" %></div>
<% end %>
<hr />
<%= render "devise/shared/links" %>
</div>