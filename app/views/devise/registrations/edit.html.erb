<% if resource.errors.empty? %>
  <%= '' %>
<% else%>
  <div class="alert">
    <%= devise_error_messages! %>
  </div>
<% end %>
<h2 class="setting">編輯帳號</h2>
<div class="post">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <span class="lsf-icon" title="stop"><%= f.label :"名字：" %><br>
  <%= f.text_field :user_name, autofocus: true %></span>
  <br />
  <span class="lsf-icon" title="stop"><%= f.label :"信箱：" %><br>
  <%= f.email_field :email, autofocus: true %></span>
  <br />

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <span class="lsf-icon" title="stop"><%= f.label :"目前密碼：" %>(我們需要您現在的密碼以做更動！)<br>
  <%= f.password_field :current_password, autocomplete: "off" %></span>
  <br />
  <span class="lsf-icon" title="stop"><%= f.label :"更改密碼：" %>  (如果不想更動密碼，請留空！)<br>
  <%= f.password_field :password, autocomplete: "off" %></span>
  <br />
  <span class="lsf-icon" title="stop"><%= f.label :"更改密碼確認：" %> （請再輸入一次欲更動的密碼！）<br>
  <%= f.password_field :password_confirmation, autocomplete: "off" %></span>
  <br>

  <div class="submit"><%= f.submit "確定更新", :class => "btn" %></div>

<% end %>
  <br />
  <hr />
  <br />
  <div class="submit"><%= button_to "刪除帳號", registration_path(resource_name), data: { confirm: "你確定要刪掉帳號嗎？" }, method: :delete,  :class => "delete btn" %></div>
  </div>