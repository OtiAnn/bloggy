<div class="setting lsf-icon" title="setting">管理後台</div>
<br>
<div class="post">
	<h3 class="category">Posts</h3>
	<div class="note lsf-icon" title="add"><%= link_to 'New Post', new_post_path %></div>
	<% @user_posts.each do |post| %>
		<ul>
			<li><span class="lsf-icon" title="play"><%= link_to post.title, post %></span><br>
				<span class="lsf-icon edit" title="edit"><%= link_to "編輯", edit_post_path(post) %></span>
				<span class="lsf-icon edit" title="remove"><%= link_to '刪除', post_path(post), method: :delete, data: { confirm: '確定刪除嗎？' } %></span></li>
		</ul>
	<% end %>
</div>

<% if current_user.admin? %>

<div class="post">
	<h3 class="category">Categories</h3>
	<div class="note lsf-icon" title="add"><%= link_to 'New Category', new_category_path %></div>
	<% all_categories.each do |cat| %>
		<ul>
			<li><span class="lsf-icon" title="play"><%= link_to cat.name, cat %></span><br>
				<span class="lsf-icon edit" title="edit"><%= link_to "編輯", edit_category_path(cat) %></span>
				<span class="lsf-icon edit" title="remove"><%= link_to '刪除', cat, method: :delete, data: { confirm: '確定刪除嗎？' } %></sapn>
			</li>
		</ul>
	<% end %>
</div>

<div class="post">
	<h3 class="category">Comments</h3>
	<h3 class="title">這裡要全刪！把刪除功能移到回應區！</h3>
	<% all_comments.each do |com| %>
		<ul>
			<li><span class="lsf-icon" title="play"><%= com.post.title %></span> | <%= com.user_name %>
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; |
				<%= link_to "查看", com %> |
				<%= link_to "編輯", edit_comment_path(com) %> |
				<%= link_to '刪除', com, method: :delete, data: { confirm: '確定刪除嗎？' } %></li>
		</ul>
	<% end %>
</div>

<div class="post">
	<h3 class="category">Users</h3>
	<% User.all.each do |user| %>
	<ul>
		<% if user.admin == true %>
			<li>
				<span class="lsf-icon" title="star"><%= user.user_name %></span> | <%= user.email %>
			</li>
		<% else %>
			<li>
				<span class="lsf-icon" title="play"><%= user.user_name %></span> | <%= user.email %>
				<span class="lsf-icon edit" title="remove"><%= link_to '刪除', admin_user_path(user),method: :delete, data: { confirm: '確定刪除嗎？' } %></span>
			</li>
		<% end %>
	</ul>
	<% end %>
</div>

<% end %>